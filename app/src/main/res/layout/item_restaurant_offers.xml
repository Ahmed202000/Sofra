<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dim_8dp"
    android:layout_marginTop="@dimen/dim_10dp"
    android:layout_marginEnd="@dimen/dim_8dp"
    app:dragEdge="right"
    app:mode="normal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dim_30dp"
            android:layout_height="@dimen/dim_30dp"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:background="@drawable/ic_green_edit" />

        <ImageView
            android:layout_width="@dimen/dim_30dp"
            android:layout_height="@dimen/dim_30dp"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:background="@drawable/ic_pink_basket" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_130dp"
            android:layout_marginStart="@dimen/dim_80dp"
            android:layout_marginTop="@dimen/dim_16dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:layout_marginBottom="@dimen/dim_16dp"
            android:background="@drawable/shadow_gray_shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dim_40dp"
                android:layout_marginEnd="@dimen/dim_40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_restaurant_offers_tv_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="get discount 10% for first order"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_restaurant_offers_img_offer"
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/dim_120dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim_16dp"
            android:paddingTop="@dimen/dim_8dp"
            android:src="@drawable/logo" />
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>
