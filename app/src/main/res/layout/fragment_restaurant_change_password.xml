<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/restaurant_change_password_fragment_et_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60dp"
            android:layout_margin="@dimen/dim_16dp"
            android:background="@drawable/shadow_gray_shape"
            android:hint="Old password"
            android:paddingStart="@dimen/dim_16dp"
            android:paddingEnd="@dimen/dim_16dp"
            android:textColorHint="@color/blue" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/restaurant_change_password_fragment_et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60dp"
            android:layout_margin="@dimen/dim_16dp"
            android:background="@drawable/shadow_gray_shape"
            android:hint="New password"
            android:paddingStart="@dimen/dim_16dp"
            android:paddingEnd="@dimen/dim_16dp"
            android:textColorHint="@color/blue" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/restaurant_change_password_fragment_et_confirmation_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60dp"
            android:layout_margin="@dimen/dim_16dp"
            android:background="@drawable/shadow_gray_shape"
            android:hint="Confirmation new password"
            android:paddingStart="@dimen/dim_16dp"
            android:paddingEnd="@dimen/dim_16dp"
            android:textColorHint="@color/blue" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/restaurant_change_password_fragment_btn_change_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:background="@drawable/gradient_btn_shape"
        android:text="change"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>