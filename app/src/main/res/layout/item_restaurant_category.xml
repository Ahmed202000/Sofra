<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dim_8dp"
    android:layout_marginTop="@dimen/dim_10dp"
    android:layout_marginEnd="@dimen/dim_8dp"
    app:dragEdge="right"
    app:mode="normal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_restaurant_category_img_edit"
            android:layout_width="@dimen/dim_30dp"
            android:layout_height="@dimen/dim_30dp"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:background="@drawable/ic_green_edit" />

        <ImageView
            android:id="@+id/item_restaurant_category_img_basket"
            android:layout_width="@dimen/dim_30dp"
            android:layout_height="@dimen/dim_30dp"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:background="@drawable/ic_pink_basket" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shadow_white_shape"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_restaurant_category_img_category"
            android:layout_width="@dimen/dim_80dp"
            android:layout_height="@dimen/dim_50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dim_24dp"
            android:background="@drawable/radius_corner_shape" />

        <TextView
            android:id="@+id/item_restaurant_category_tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dim_16dp"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:text="ahmed"
            android:textColor="@color/blue"
            android:textSize="24sp" />
    </LinearLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>